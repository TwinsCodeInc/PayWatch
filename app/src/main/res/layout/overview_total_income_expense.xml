<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:focusable="false"
            android:textAlignment="center"
            android:text="Month balance"
            android:id="@+id/totalDifferenceSumTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:focusable="false"
            android:textAlignment="center"
            android:id="@+id/totalDifferenceSum"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:focusable="false"
            android:textAlignment="center"
            android:text="Total income"
            android:id="@+id/totalIncomeTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:focusable="false"
            android:textAlignment="center"
            android:id="@+id/totalIncomeSum"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:focusable="false"
            android:color="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:text="Total expense"
            android:id="@+id/totalExpenseSumTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:focusable="false"
            android:color="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:id="@+id/totalExpenseSum"/>

    </LinearLayout>

</android.support.v7.widget.CardView>